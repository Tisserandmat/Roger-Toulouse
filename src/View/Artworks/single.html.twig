{% extends 'layout.html.twig' %}

{% block content %}
    {% include 'Artworks/select.html.twig' %}
    {% include 'Artworks/_errors.html.twig' %}
    {% if artwork is not empty %}
    <div class="bloc_details">
        <div class="title_details">
            <H2>{{ artwork.name }}</H2>
            <img src="/assets/upload/{{ artwork.image }}" Alt="{{ artwork.category ~ ' : ' ~ artwork.name }}">
        </div>
        <div class="descr_detail">
            <div class="logo_theme">
                <div>
                    {% if artwork.category == 'ecriture' %}
                        <i class="fas fa-feather-alt"></i>
                    {% elseif artwork.category == 'peinture'%}
                        <i class="fas fa-palette"></i>
                    {% elseif artwork.category == 'illustration'%}
                        <i class="fas fa-pen"></i>
                    {% else %}
                        <i class="fas fa-shapes"></i>
                    {% endif %} {{ artwork.category|title }}
                </div>
                <div>
                    <i class="far fa-calendar-alt"></i>
                    <a href="../../biography#{{ artwork.date|date("Y") }}"> {{ artwork.date|date("Y") }}</a>
                </div>
            </div>
            <div>
                <info>{{ artwork.more_info }}</info>
            </div>
            <div>
                {{ artwork.description|nl2br }}
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}
