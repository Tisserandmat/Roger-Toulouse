<div class="card_artwork">
    <div class="picture">
        <a href="/Artworks/single/{{ artwork.idArtwork }}">
            <img src="/assets/upload/{{ artwork.image }}" class="card-img-top" alt="{{ artwork.category ~ ' : ' ~ artwork.name }}">
        </a>
    </div>
    <div class="card-body">
        <div>
            <div class="card-title">
                {{ artwork.name }}
            </div>
            <div class="card-text">
                {{ artwork.description }}
            </div>
            <div class="card-info">
                <div> {{ artwork.size }} </div>
                <div> {{ artwork.more_info }} </div>
            </div>
        </div>
        <div class="card-text link">
            <div>
                <a href="/artworks/index/?cat={{ artwork.id }}">
                    {% if artwork.category == 'ecriture' %}
                        <i class="fas fa-feather-alt"></i>
                    {% elseif artwork.category == 'peinture'%}
                        <i class="fas fa-palette"></i>
                    {% elseif artwork.category == 'illustration'%}
                        <i class="fas fa-pen"></i>
                    {% else %}
                        <i class="fas fa-shapes"></i>
                    {% endif %}
                    {{ artwork.category|upper }}
                </a>
            </div>
            <div>
                <a href="/biography#{{ artwork.date|date("Y") }}">
                    <i class="far fa-calendar-alt"></i> {{ artwork.date|date("Y") }}
                </a>
            </div>
        </div>
    </div>
</div>
