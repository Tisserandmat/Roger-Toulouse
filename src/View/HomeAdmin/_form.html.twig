<div class="container">
    {% for error in errors %}
        <div><p class="text-danger alert alert-danger">{{ error }}</p></div>
    {% endfor %}
    <form method="POST" action="">
        <div class="form-group">
            <input hidden value="{{ new.id }}" name="id">
            <label for="title">Titre</label>
            <input type="text" name="title" value="{{ new.title }}" class="form-control" id="title" placeholder="ex :
 Expositions">
        </div>
        <div class="form-group">
            <label for="desc">Description</label>
            <textarea class="form-control" name="desc" id="desc" rows="3">{{ new.desc }}</textarea>
        </div>
        <div class="form-group">
            <label for="button">Bouton</label>
            <input type="text" name="button" id="button" value="{{ new.button }}" class="form-control"
                   placeholder="ex : Expo OrlÃ©ans">
        </div>
        <div class="form-group">
            <label for="button_link">Lien Bouton</label>
            <input type="text" name="button_link" value="{{ new.button_link }}" class="form-control" placeholder="ex :
 www.google.fr" id="button_link">
        </div>
        <button class="btn">Valider</button>
    </form>
</div>