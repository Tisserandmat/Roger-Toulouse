<div class="carousel-homepage">
    <div id="carouselFade" class="carousel container mb-5 slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            {% for slide in carousel %}
                <div class="carousel-item {% if loop.index == 1 %} active {% endif %}">
                    <a href="/Artworks/single/{{ slide.id }}"><img src="/assets/upload/{{ slide.image }}" class="d-block w-100 img-home"
                         alt="{{ slide.name }}"></a>
                    <div class="desc d-none carousel-caption d-md-block">
                        <p class="slide-title">{{ slide.name }}</p>
                        <p class="slide-text">{{ slide.more_info }}</p>
                    </div>
                </div>
            {% endfor %}
            <a class="carousel-control-prev" href="#carouselFade" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselFade" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
